<html class="no-js" lang="en" >
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Geo JSON Client</title>
    <link rel="stylesheet" href="css/normalize.css">
    <link rel="stylesheet" href="css/foundation.css">
    <script src="js/vendor/custom.modernizr.js"></script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>
    <script type="text/javascript">
      function initialize() {
        var mapOptions = {
          center: new google.maps.LatLng(54, -2),
          zoom: 7
        };
        var map = new google.maps.Map(document.getElementById("jsonMap"), mapOptions);
        map.data.loadGeoJson('http://localhost:9292/geo-json/dentists.geojson');
      }
      google.maps.event.addDomListener(window, 'load', initialize);
    </script>
    <style>
      #jsonMap { width: 100%; height: 800px; }
      img{ float: right; }
    </style>
  </head>
  <body>
     <nav class="top-bar" data-topbar>
        <ul class="title-area">
           <li class="name">
              <h1><a href="/">Geo JSON Client</a></h1>
           </li>
